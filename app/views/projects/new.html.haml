= provide(:title, 'New Project')
%h1 New Project
.row
	.span6.offset3
		= form_for(:project, url: projects_path) do |f|
			= f.label :name
			= f.text_field :name
			= f.label :description
			= f.text_field :description
			= f.submit "Continue", class: "btn btn-large btn-primary"
		%p 
			Need any help?
			= link_to "Click here!", "#"